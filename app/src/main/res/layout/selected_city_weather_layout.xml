<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/weather_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/WeatherActivityTheme_bg_color"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/city_weather_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        style="@style/ToolbarStyle"
        >

        <TextView
            android:id="@+id/show_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:includeFontPadding="false"
            android:textColor="@color/weather_info_layout_text_color"
            android:textSize="18sp"
            android:background="@color/weatherView2_bg_color"
            android:visibility="gone"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>



</RelativeLayout>